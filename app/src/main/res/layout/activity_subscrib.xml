<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        tools:context=".MainActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/mytoolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"

            android:elevation="4dp"

            app:titleMargin="8dp"
            app:titleTextColor="#FFFFFF" />

        <!-- Your main content goes here -->
        <!-- CardView 1 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewFirst"
            android:layout_width="292dp"
            android:layout_height="173dp"
            android:layout_below="@id/mytoolbar"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="20dp"
            app:cardElevation="50dp">

            <!-- Other Views -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- TextView 1 -->

                <!-- TextView 2 -->

                <!-- TextView 3 -->

                <TextView
                    android:id="@+id/iconLabelTextView"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="0dp"
                    android:background="#020202"

                    android:gravity="center|center_horizontal"
                    android:text="1 Month Plan"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <!-- Button at the Bottom -->

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="243dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iconLabelTextView"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="26dp"

                    android:gravity="center|center_horizontal"
                    android:text="Unlimited Contacts Save"
                    android:textColor="#000000"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView2"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="45dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginEnd="84dp"

                    android:text="Access all Features"
                    android:textColor="#000000"
                    android:textSize="17sp" />

                <Button
                    android:id="@+id/button1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="#3D5AFE"
                    android:text="Buy Now"
                    android:textColor="#FFFFFF" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="75dp"
                    android:layout_height="65dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="78dp"
                    android:layout_marginEnd="10dp"
                    app:srcCompat="@drawable/pearl"
                    tools:srcCompat="@drawable/pearl" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <!-- CardView 2 (Below CardView 1) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewSecond"
            android:layout_width="292dp"
            android:layout_height="173dp"
            android:layout_below="@id/cardViewFirst"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="20dp"
            app:cardElevation="50dp">

