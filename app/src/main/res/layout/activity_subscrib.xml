            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- TextView 1 -->


                <TextView
                    android:id="@+id/iconLabelTextView1"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="0dp"
                    android:background="#020202"

                    android:gravity="center|center_horizontal"
                    android:text="6 Month Plan"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <!-- Button at the Bottom -->

                <TextView
                    android:id="@+id/textView2b"
                    android:layout_width="243dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iconLabelTextView1"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="26dp"

                    android:gravity="center|center_horizontal"
                    android:text="Unlimited Contacts Save"
                    android:textColor="#000000"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView2b"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="45dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginEnd="84dp"

                    android:text="Access all Features"
                    android:textColor="#000000"
                    android:textSize="17sp" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="#3D5AFE"
                    android:text="Buy Now"
                    android:textColor="#FFFFFF" />

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="75dp"
                    android:layout_height="65dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="78dp"
                    android:layout_marginEnd="10dp"
                    app:srcCompat="@drawable/silver"
                    tools:srcCompat="@drawable/silver" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- CardView 4-->
        <!-- CardView 2 (Below CardView 1) -->


        <!-- CardView 4 (Below CardView 1) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView4"
            android:layout_width="292dp"
            android:layout_height="173dp"
            android:layout_below="@id/cardViewSecond"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="50dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="20dp"
            app:cardElevation="50dp">

            <!-- Other Views -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- TextView 1 -->


                <TextView
                    android:id="@+id/iconLabelTextView3"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="0dp"
                    android:background="#020202"

                    android:gravity="center|center_horizontal"
                    android:text="Lifetime Plan"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <!-- Button at the Bottom -->

                <TextView
                    android:id="@+id/textView3c"
                    android:layout_width="243dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iconLabelTextView3"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="26dp"

                    android:gravity="center|center_horizontal"
                    android:text="Unlimited Contacts Save"
                    android:textColor="#000000"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView3c"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="45dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginEnd="84dp"

                    android:text="Access all Features"
                    android:textColor="#000000"
                    android:textSize="17sp" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="#3D5AFE"
                    android:text="Buy Now"
                    android:textColor="#FFFFFF" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="75dp"
                    android:layout_height="65dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="78dp"
                    android:layout_marginEnd="10dp"
                    app:srcCompat="@drawable/diamond"
                    tools:srcCompat="@drawable/diamond" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>


    </RelativeLayout>
</ScrollView>
